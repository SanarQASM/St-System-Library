<AnchorPane fx:id="enterEmailAnchor" prefHeight="318.0" prefWidth="255.0" styleClass="bothForm" stylesheets="@application.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.enterEmailController">
   <children>
