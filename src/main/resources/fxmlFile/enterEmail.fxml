            <Font name="Rockwell Condensed Bold" size="15.0" />
         </font>
         <styleClass>
            <String fx:value="switchAnchor" />
            <String fx:value="allButton" />
            <String fx:value="switchAnchorButton" />
         </styleClass>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <graphic>
            <ImageView fitHeight="20.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../image/next.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button alignment="CENTER" graphicTextGap="10.0" layoutX="75.0" layoutY="261.0" mnemonicParsing="false" onAction="#backToregister" prefHeight="40.0" prefWidth="100.0" stylesheets="@application.css" text="Back" textFill="#fefee3">
