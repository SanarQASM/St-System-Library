         <font>
            <Font name="Rockwell Condensed Bold" size="22.0" />
         </font>
      </Label>
      <ImageView fx:id="emailIcon" fitHeight="68.0" fitWidth="71.0" layoutX="87.0" layoutY="54.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../image/emailMain.png" />
         </image>
      </ImageView>
      <TextField fx:id="email" focusTraversable="false" layoutX="28.0" layoutY="137.0" prefHeight="35.0" prefWidth="200.0" promptText="email" stylesheets="@application.css">
         <font>
            <Font name="Bodoni MT" size="15.0" />
         </font>
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
         <styleClass>
            <String fx:value="enterInformation" />
            <String fx:value="transmate" />
            <String fx:value="textInformation" />
         </styleClass>
      </TextField>
      <Label fx:id="errorEmail" layoutX="55.0" layoutY="174.0" prefHeight="15.0" prefWidth="140.0" textFill="RED">
